{
    "manifest_version": 3,
    "name": "Network Traffic Tracker",
    "version": "1.0",
    "description": "Tracks network traffic for all sites and sends it to Appwrite every 10 seconds.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}